<div class="container">
 <div class="custom-container">

  <h2 class="mt-3 p-2 uppercase"><strong><%= current_user.first_name %> <%= current_user.last_name %></strong></h2>

  <div class="cards">


    <% if current_user.photo.key == nil %>
     <img class="avatar-superlarge placeimage" <%= image_tag "profile.jpg" %>
  <% else %>
    <img class="avatar-superlarge" <%= cl_image_tag current_user.photo.key %>
  <% end %>

    <div class ="trip-infos"><h3 class="mt-3" style="color:Gray;"><b>First Name</h3></b>
    <h5><%= link_to edit_user_registration_path do %><%= current_user.first_name%>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
    </svg></h5>
    <% end %>
    <h3 style="color:Gray;"><b>Last Name</h3></b>
    <h5><%= link_to edit_user_registration_path do %><%= current_user.last_name%>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
    </svg></h5>
    <% end %>
    <h2 class="brand-model mt-3" style="color:Gray;"><b>E-mail</h2></b>
    <h5><%= link_to edit_user_registration_path do %> <%= current_user.email%>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
    </svg></h5>
    <% end %>
  </div>
 </div><tr>
    <h2 class="brand-model mt-3">
  <div class="custom-container">
      Your Car</h2>
      <% if current_user.cars.length > 1 %>s </tr>
      <% end %>
        <div class="cards" >
          <% current_user.cars.each do |car| %>
            <%= link_to car_path(car) do %>
              <%= render 'shared/card', car: car %>
            <% end %>
          <% end %>

    <%= link_to new_car_path do %>
      <div class="placecontainer">
      <img alt="Avatar" class="placeimage" style="width:100%"  <%= image_tag "add_image.svg" %> <p class="brand-model mt-3"> <center>  </p>
      </div>
    <% end %>
  </div>


  <h2 class="brand-model mt-3"> <div class="custom-container">Your Rental</h2>
  <% if current_user.cars.length > 1 %>s </tr>
    <% end %>
    <div class="cards">
      <% @last=Booking.all %>
        <% @last.each do |l| %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= l.car.brand_model %></h5>
                <p class="card-text">From:
                <br>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/></svg>
                <%=l.start_date %> to <%=l.end_date %> </p>
              <%= cl_image_tag l.car.photos.first.key, style:"width:100%" %>
                <a><button class="btn btn-primary" style="width:100%"> <%= link_to car_path(l.car) do %> View car </a>
                <% end %>
            </div>
          </div>
        <% end %>
    </div>
</div>
